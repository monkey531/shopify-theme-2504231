{% style %}
.testimonials {
  padding: 80px 0;
  background: #ffffff;
}

.testimonials__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}

.testimonials__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  margin-bottom: 60px;
}

.testimonials__rating {
  background: #8B4513;
  color: #ffffff;
  padding: 40px;
  border-radius: 8px;
  text-align: center;
}

.testimonials__rating-title {
  font-size: 24px;
  margin-bottom: 20px;
  color: #ffffff;
}

.testimonials__stars {
  color: #FFD700;
  font-size: 32px;
  margin-bottom: 16px;
}

.testimonials__rating-text {
  font-size: 16px;
  margin-bottom: 20px;
}

.testimonials__stats {
  text-align: left;
}

.testimonials__stats-title {
  font-size: 24px;
  font-weight: 700;
  margin-bottom: 30px;
  color: #1a1a1a;
}

.testimonials__stat-item {
  display: flex;
  align-items: center;
  gap: 16px;
  margin-bottom: 24px;
}

.testimonials__stat-icon {
  width: 40px;
  height: 40px;
  color: var(--color-primary);
}

.testimonials__stat-text {
  font-size: 16px;
  line-height: 1.5;
  color: #4a4a4a;
}

.testimonials__reviews {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}

.testimonial-card {
  background: #f8f8f8;
  padding: 24px;
  border-radius: 8px;
}

.testimonial-card__stars {
  color: #FFD700;
  margin-bottom: 12px;
}

.testimonial-card__title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #1a1a1a;
}

.testimonial-card__text {
  font-size: 14px;
  line-height: 1.6;
  color: #4a4a4a;
  margin-bottom: 16px;
}

.testimonial-card__author {
  font-size: 14px;
  font-weight: 500;
  color: #1a1a1a;
}

.testimonial-card__location {
  font-size: 14px;
  color: #4a4a4a;
}

@media screen and (max-width: 768px) {
  .testimonials__grid {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .testimonials__reviews {
    grid-template-columns: 1fr;
  }
}
{% endstyle %}

